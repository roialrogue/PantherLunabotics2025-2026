{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-DCMAKE_BUILD_TYPE=Debug",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "make",
            "args": ["-j4"],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["CMake Configure"]
        },
        {
            "label": "Run Program",
            "type": "shell",
            "command": "./ecbf_unicycle",
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "dependsOn": ["CMake Build"]
        }
    ]
}